default_border normal 1
hide_edge_borders both
title_align center
font pango:JetBrainsMono Nerd Font Mono Regular 8

#                    _       __    __
#  _   ______ ______(_)___ _/ /_  / /__  _____
# | | / / __ `/ ___/ / __ `/ __ \/ / _ \/ ___/
# | |/ / /_/ / /  / / /_/ / /_/ / /  __(__  )
# |___/\__,_/_/  /_/\__,_/_.___/_/\___/____/
set $mod Mod4
set $alt Mod1
set $term alacritty
set $browser brave
set $scripts $HOME/.local/scripts

set $left h
set $down j
set $up k
set $right l

set $ws1 "(1) DEV"
set $ws2 "(2) WWW"
set $ws3 "(3) FILE"
set $ws4 "(4) CHAT"
set $ws5 "(5) VIRT"
set $ws6 "(6) MISC"
set $ws7 "(7) PDF"

# set $ws1 "1:"
# set $ws2 "2:"
# set $ws3 "3:"
# set $ws4 "4:"
# set $ws5 "5:ﴯ"
# set $ws6 "6:"

#                __             __             __
#   ____ ___  __/ /_____  _____/ /_____ ______/ /_
#  / __ `/ / / / __/ __ \/ ___/ __/ __ `/ ___/ __/
# / /_/ / /_/ / /_/ /_/ (__  ) /_/ /_/ / /  / /_
# \__,_/\__,_/\__/\____/____/\__/\__,_/_/   \__/
exec --no-startup-id nm-applet &
exec --no-startup-id picom --experimental-backends &
exec --no-startup-id lxpolkit &
exec --no-startup-id xfce4-power-manager &
exec_always --no-startup-id ~/.config/i3/launch-polybar.sh &
exec --no-startup-id betterlockscreen -u $HOME/Pictures/wallpapers &
# custom scripts in $PATH
exec --no-startup-id launch-optimus-indicator
exec_always --no-startup-id setbg &

#     __              __    _           __
#    / /_____  __  __/ /_  (_)___  ____/ /____
#   / //_/ _ \/ / / / __ \/ / __ \/ __  / ___/
