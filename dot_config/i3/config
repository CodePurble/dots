# i3 controls
bindsym $mod+Control+r reload
bindsym $mod+Shift+r restart
bindsym $mod+Control+q exit
floating_modifier $mod

# window management
bindsym $mod+q kill

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+i split h
bindsym $mod+o split v
bindsym $mod+f fullscreen toggle
bindsym $mod+t layout toggle tabbed split
bindsym $mod+e layout toggle split
bindsym $mod+s floating toggle

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7

bindsym $mod+Escape workspace back_and_forth

bindsym $mod+bracketright workspace next
bindsym $mod+bracketleft  workspace prev

# applications (also incluedes custom scripts in $PATH)
bindsym $mod+Return exec $term
bindsym $mod+b exec $browser
bindsym $mod+n exec "$term -e ranger"

bindsym $mod+space exec rofi -modi drun -show drun -theme ~/.config/rofi-themes/dt-dmenu.rasi -terminal $term
bindsym $mod+Shift+space exec rofi -theme ~/.config/rofi-themes/dt-dmenu.rasi -terminal $term -modi window -show

# move the currently focused window to the scratchpad
# bindsym $mod+Shift+minus move scratchpad
# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.

# 1. search for window with given class
# 2. if found, it will be in the scratchpad, so toggle visibility
# 3. If not found, create it (this case takes up one invocation of this shortcut)
# So, if no window with that class exists, pressing once will JUST CREATE the window, not show it
# From then on, this shortcut will toggle the scratchpad
bindsym $mod+Tab exec \
    "xdotool search --class ranger_scratch && i3-msg scratchpad show || $term --class ranger_scratch,ranger_scratch -e ranger"

# bluetoothctl window
bindsym $mod+minus exec "$term --class btctl,btctl -e bluetoothctl"


bindsym Control+Print exec screenkey
bindsym Menu exec powermenu

bindsym $mod+BackSpace exec betterlockscreen -l dim
bindsym $mod+Shift+BackSpace exec betterlockscreen -s dim

bindsym Print exec maimscreen
bindsym $mod+Print exec maimpick-rofi

bindsym $mod+Menu exec displayselect
bindsym $mod+Shift+Menu exec gputoggle

bindsym XF86AudioRaiseVolume exec --no-startup-id volume -n up 5
bindsym XF86AudioLowerVolume exec --no-startup-id volume -n down 5
bindsym XF86AudioMute exec --no-startup-id volume -n mute

# polybar
bindsym $alt+space exec polybar-msg cmd restart
bindsym $mod+r mode "resize"

#                         __
#    ____ ___  ____  ____/ /__  _____
#   / __ `__ \/ __ \/ __  / _ \/ ___/
#  / / / / / / /_/ / /_/ /  __(__  )
# /_/ /_/ /_/\____/\__,_/\___/____/
# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym $left       resize shrink width 10 px or 10 ppt
        bindsym $down       resize grow height 10 px or 10 ppt
        bindsym $up         resize shrink height 10 px or 10 ppt
        bindsym $right      resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left        resize shrink width 10 px or 10 ppt
        bindsym Down        resize grow height 10 px or 10 ppt
        bindsym Up          resize shrink height 10 px or 10 ppt
        bindsym Right       resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}


#                __
#    _______  __/ /__  _____
#   / ___/ / / / / _ \/ ___/
#  / /  / /_/ / /  __(__  )
# /_/   \__,_/_/\___/____/
# my ranger scratchpad
for_window [class="ranger_scratch"] move window to scratchpad
for_window [class="btctl"] floating enable

# all popups are floating
for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable
for_window [window_type="_NET_WM_WINDOW_TYPE_(DIALOG|UTILITY|SPLASH)"] floating enable

assign [class="Brave-browser"] $ws2
assign [class="Citra"] $ws4
assign [class="Pamac-manager"] $ws5
assign [class="Pcmanfm"] $ws3
assign [class="VSCodium"] $ws1
assign [class="Ferdi"] $ws4
assign [class="Signal"] $ws4
assign [class="discord"] $ws4
assign [class="Thunderbird"] $ws4
assign [class="Virt-manager"] $ws5
assign [class="Zathura"] $ws7
for_window [class="stacer"] floating enable
for_window [class="Dragon-drop"] floating enable
for_window [class="Gtkwave"] floating enable
for_window [class="Zathura"] layout tabbed
